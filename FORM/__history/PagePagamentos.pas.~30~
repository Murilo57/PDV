{$R *.dfm}

procedure TPagePagamento.pnCartaoClick(Sender: TObject);
begin
  if pnFundoCartao.Color = clBtnFace then
    pnFundoCartao.Color := $002BC0EC
  else
    pnFundoCartao.Color := clBtnFace;




end;

