program PDVproj;

uses
  Forms,
  PDV in '..\FORM\PDV.pas' {frmPDV},
  Login in '..\FORM\Login.pas' {frmLogin},
  Conexao in '..\FORM\Conexao.pas' {dm: TDataModule},
  UMensagem in '..\FORM\UMensagem.pas' {msg},
  PagePagamentos in '..\FORM\PagePagamentos.pas' {PagePagamento};

{$R *.res}

begin
  Application.Initialize;
  ReportMemoryLeaksOnShutdown := True; //Caso tiver vazamento de memoria no desligamento do gerenciador de tarefa essa função limpa os espaços alocados e não usados 
  Application.CreateForm(TfrmPDV, frmPDV);
  Application.CreateForm(Tdm, dm);
  Application.CreateForm(Tmsg, msg);
  Application.CreateForm(TPagePagamento, PagePagamento);
  Application.Run;
end.
